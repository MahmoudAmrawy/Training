@model IEnumerable<Training.Models.Employee>

@using Training.Models;

@{
    ViewData["Title"] = "Employee Information";
}

<h1>Employee Information</h1>

<table class="table table-striped" style="font-family:Arial;">
    <thead class="thead-dark">
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.EmployeeId)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.UserName)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Gender)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.City)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.DepartmentName)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Employee item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modeItem => item.EmployeeId)</td>
                <td>@Html.DisplayFor(modeItem => item.UserName)</td>
                <td>@Html.DisplayFor(modeItem => item.Gender)</td>
                <td>@Html.DisplayFor(modeItem => item.City)</td>
                <td>@Html.DisplayFor(modeItem => item.DepartmentName)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.EmployeeId })
                    @Html.ActionLink("Delete", "Delete", new {id = item.EmployeeId})
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Back To List", "Index")